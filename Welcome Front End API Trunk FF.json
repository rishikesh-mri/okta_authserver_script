{
    "AuthorizationServer": {
        "InputObject": {
            "Name": "Welcome Front End API Trunk FF",
            "Audience": "mri:wfe:api",
            "Description": null
        },
        "Scope": [
            {
                "InputObject": {
                    "Name": "mri:wfe:api",
                    "Description": null,
                    "MetadataPublish": false,
                    "DefaultScope": true
                }
            },
            {
                "InputObject": {
                    "Name": "mri:wfe:api:application",
                    "Description": "Solely used to identify an MRI Application and will allow us to restrict the authorization to only select endpoints",
                    "MetadataPublish": false,
                    "DefaultScope": false
                }
            },
            {
                "InputObject": {
                    "Name": "mri:wfe:api:federation",
                    "Description": null,
                    "MetadataPublish": false,
                    "DefaultScope": false
                }
            },
            {
                "InputObject": {
                    "Name": "mri:wfe:api:sfdc",
                    "Description": "mri:wfe:api:sfdc",
                    "MetadataPublish": false,
                    "DefaultScope": false
                }
            }
        ],
        "Policy": [
            {
                "InputObject": {
                    "Name": "Client Credentials Only",
                    "Description": "Client Credentials Only",
                    "Priority": 1,
                    "Client": [
                        "Application Gateway API Dev",
                        "Application Gateway API FF"
                    ]
                },
                "Rule": [
                    {
                        "Name": "Client Credentials Only",
                        "GrantTypes": [
                            "client_credentials"
                        ],
                        "Priority": 1,
                        "Scopes": [
                            "openid",
                            "profile",
                            "email",
                            "address",
                            "phone",
                            "offline_access",
                            "mri:wfe:api:sfdc",
                            "mri:wfe:api"
                        ]
                    }
                ]
            },
            {
                "InputObject": {
                    "Name": "AG Federation",
                    "Description": "Access Federation scope",
                    "Priority": 2,
                    "Client": [
                        "AG Federation API"
                    ]
                },
                "Rule": [
                    {
                        "Name": "Access federation scope",
                        "GrantTypes": [
                            "client_credentials"
                        ],
                        "Priority": 1,
                        "Scopes": [
                            "mri:wfe:api",
                            "mri:wfe:api:federation"
                        ]
                    }
                ]
            },
            {
                "InputObject": {
                    "Name": "MRI Application",
                    "Description": "MRI Application",
                    "Priority": 3,
                    "Client": [
                        "ALL_CLIENTS"
                    ]
                },
                "Rule": [
                    {
                        "Name": "MRI Application",
                        "GrantTypes": [
                            "authorization_code"
                        ],
                        "Priority": 1,
                        "Scopes": [
                            "mri:wfe:api:application"
                        ]
                    }
                ]
            }
        ]
    }
}